<div class="bg-gray-50">
  <form action="/menu" method="GET">
    <!-- Thực Đơn TP.HCM Section -->
    <section class="container mx-auto px-4 py-12">
      <!-- Thực Đơn Filter Section -->
      <section
        id="filterSection"
        class="bg-white p-6 rounded-lg shadow-md mb-12"
      >
        <div class="space-y-4">
            <div>
                <label for="area" class="block font-semibold text-gray-700"
                >Khu vực</label
                >
                <select
                name="area"
                class="w-full p-2 mt-1 border rounded-lg"
                onchange="this.form.submit();"
                >
                    <option value="" <% if (!selectedArea) { %>selected<% } %>>Tất cả</option>
                    <% allAreas.forEach(area => { %>
                    <option value="<%- area.area_id %>" <% if (selectedArea?.name === area.name ) { %>selected<% } %>><%- area.name %></option>
                    <% }) %>
                </select>    
            </div>
          <div>
            <label for="category" class="block font-semibold text-gray-700"
              >Loại Món</label
            >
            <select
              name="category"
              class="w-full p-2 mt-1 border rounded-lg"
              onchange="this.form.submit();"
            >
              <option value="" <% if (!selectedCategory) { %>selected<% } %>>Tất cả</option>
              <% allCategories.forEach(category => { %>
              <option value="<%- category.category_id %>" <% if (selectedCategory?.name === category.name ) { %>selected<% } %>><%- category.name %></option>
              <% }) %>
            </select>
          </div>
          <div>
            <label for="priceRange" class="block font-semibold text-gray-700"
              >Khoảng giá</label
            >
            <select name="priceRange" class="w-full p-2 mt-1 border rounded-lg">
              <option value="">Tất cả</option>
              <option value="low">Dưới 100,000 VND</option>
              <option value="mid">100,000 - 200,000 VND</option>
              <option value="high">Trên 200,000 VND</option>
            </select>
          </div>
        </div>
      </section>

      <!-- Menu Items -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% dishes.forEach(dish => { %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <img
            src="https://sushiworld.com.vn/wp-content/uploads/2023/11/c.jpg"
            alt="Dish 1"
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-lg font-bold text-gray-800"><%- dish.name %></h3>
            <p class="text-gray-600 mt-2 text-sm"><%- dish.description %></p>
            <span class="block text-red-500 mt-4 font-bold"
              ><%- dish.price %> VNĐ</span
            >
          </div>
        </div>
        <% }) %>
      </div>      
    </section>
  </form>
</div>
