<main class="container mx-auto px-4 w-1/2 sm:w-1/2 md:w-1/2 lg:w-1/2 xl:w-1/2">
    <!-- Reservation Section -->
    <section class="bg-gray-100 py-10">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl font-bold text-gray-700 text-center mb-6">Đặt Bàn Ngay</h2>
        <form action="/dat-ban" method="POST" class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md">
            <div class="mb-4">
                <label for="branch_id" class="block text-sm font-medium text-gray-700">Chi nhánh</label>
                <select id="branch_id" name="branch_id" required
                  class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-300 focus:outline-none">
                  <option value="">Chọn chi nhánh</option>
                  <% branches.forEach(branch => { %>
                    <option value="<%= branch.branch_id %>"><%= branch.name %></option>
                  <% }) %>
                </select>
            </div>
            <div class="mb-4">
                <label for="name" class="block text-sm font-medium text-gray-700">Họ và tên</label>
                <input type="text" id="name" name="name" required
                    class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-300 focus:outline-none">
            </div>
            <div class="mb-4">
                <label for="phone" class="block text-sm font-medium text-gray-700">Số điện thoại</label>
                <input type="tel" id="phone" name="phone" required
                    class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-300 focus:outline-none">
            </div>
            <div class="mb-4">
                <label for="date" class="block text-sm font-medium text-gray-700">Ngày đặt</label>
                <input type="date" id="date" name="date" required
                    class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-300 focus:outline-none">
            </div>
            <div class="mb-4">
                <label for="time" class="block text-sm font-medium text-gray-700">Giờ đặt</label>
                <input type="time" id="time" name="time" required
                    class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-300 focus:outline-none">
            </div>
            <div class="mb-4">
                <label for="guests" class="block text-sm font-medium text-gray-700">Số lượng khách</label>
                <input type="number" id="guests" name="guests" min="1" max="20" required
                    class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-red-300 focus:outline-none">
            </div>
            <button type="submit"
                class="w-full py-2 bg-red-500 text-white rounded-md hover:bg-red-600 transition duration-300">Đặt
                bàn</button>
        </form>
    </div>
</main>